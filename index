  <script>
    // Mobile drawer logic
    const drawer = document.getElementById('drawer');
    const openBtn = document.getElementById('openDrawer');
    const closeBtn = document.getElementById('closeDrawer');

    function openDrawer(){
      drawer.classList.add('open');
      drawer.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden';
    }
    function closeDrawer(){
      drawer.classList.remove('open');
      drawer.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
    }

    openBtn?.addEventListener('click', openDrawer);
    closeBtn?.addEventListener('click', closeDrawer);

    // Close drawer when clicking backdrop
    drawer.addEventListener('click', (e) => {
      if (e.target === drawer) closeDrawer();
    });

    // Close drawer when selecting a link
    document.querySelectorAll('.drawerLink').forEach(a => {
      a.addEventListener('click', () => closeDrawer());
    });

    // Prefill helpers
    function prefillFacility(){
      document.getElementById('persona').value = 'Facility';
      document.getElementById('need').value = 'Coverage Request';
      const msg = document.getElementById('message');
      if (msg && !msg.value.trim()){
        msg.value = "Facility request:\n- Unit type (MICU/SICU/Trauma/ED/HM/Neuro ICU): \n- Shift model (days/nights, 7-on/7-off, 12s): \n- Procedures expected (lines, bronchs, ultrasound, airway): \n- Start date / duration: \n- Licensing / privileging requirements: \n";
      }
      document.getElementById('contact')?.scrollIntoView({behavior:'smooth'});
    }
    function prefillPA(){
      document.getElementById('persona').value = 'PA';
      document.getElementById('need').value = 'PA Application';
      const msg = document.getElementById('message');
      if (msg && !msg.value.trim()){
        msg.value = "PA application:\n- Years of experience (ICU/EM/HM): \n- Procedure comfort (lines/US/airway/bronch): \n- Active licenses / states: \n- Preferred specialties (SICU/MICU/Trauma/ED/HM): \n- Availability / start date: \n- Attach CV (if emailing separately): \n";
      }
      document.getElementById('contact')?.scrollIntoView({behavior:'smooth'});
    }
    window.prefillFacility = prefillFacility;
    window.prefillPA = prefillPA;

    // Demo form submit (front-end only)
    const form = document.getElementById('contactForm');
    const status = document.getElementById('formStatus');
    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      if (status){
        status.textContent = "Submitted (demo). Connect this form to a backend or form service to receive messages.";
      }
      form.reset();
    });

    // Year
    document.getElementById('year').textContent = new Date().getFullYear();
  </script>
</body>
